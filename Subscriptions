Problem Code:SUBSCRIBE_


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int n = s.nextInt();
		    int x = s.nextInt();
		    if(n%6 == 0){
		        System.out.println((n/6) * x);
		    }
		    else{
		        System.out.println(((n/6) + 1) * x);
		    }
		}
	}
}


