Problem Code:CHEFSTR1


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int n = s.nextInt();
		    long arr[] = new long[n];
		    
		    for(int i=0;i<n;i++){
		        arr[i] = s.nextInt();
		    }
		    
		    long count=0;
		    for(int i=0;i<n-1;i++){
		        count += Math.abs(arr[i] - arr[i+1]) - 1;
		    }
		    
		    System.out.println(count);
		}
	}
}


