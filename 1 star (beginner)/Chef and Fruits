Problem Code:FRUITS


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int n = s.nextInt();
		    int m = s.nextInt();
		    int k = s.nextInt();
		    
		    int val = Math.abs(n - m);   // number he lack
		    
		    if(val <= k){
		        System.out.println(0);
		    }
		    else{
		        System.out.println(val - k);
		    }
		}
	}
}


