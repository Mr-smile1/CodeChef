Problem Code:XOR_PAL


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int n = s.nextInt();
		    String st = s.next();
		    
		    int count=0;
		    for(int i=0;i<n/2;i++){
		        if(st.charAt(i) != st.charAt(n-1-i)){
		            count++;
		        }
		    }
		    System.out.println((count+1)/2);
		}
	}
}


