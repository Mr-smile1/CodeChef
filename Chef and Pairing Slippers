Problem Code:CHEFSLP


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int n = s.nextInt();
		    int l = s.nextInt();
		    int x = s.nextInt();
            int r = n-l;

		    System.out.println(x * Math.min(l,r));
		}
	}
}

