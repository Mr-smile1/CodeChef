Problem Code:BUYLAMP


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int n = s.nextInt();
		    int k = s.nextInt();
		    int x = s.nextInt();
		    int y = s.nextInt();
		    
		    System.out.println(k*x + (n-k)*(Math.min(x,y)));
		}
	}
}


