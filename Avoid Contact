Problem Code:AVOIDCONTACT


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int x = s.nextInt();
		    int y = s.nextInt();
		    int notinfec = x-y;
            
            if(notinfec == 0){
                System.out.println((y*2)-1);
            }
            else{
                System.out.println(notinfec + (y*2));
            }
		}
	}
}


