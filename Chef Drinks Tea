Problem Code:TEA


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		while(t-- > 0){
		    int x = s.nextInt();
		    int y = s.nextInt();
		    int z = s.nextInt();
		    int refill = 0;
		    
		    if(x%y == 0){
		        System.out.println((x/y) * z);
		    }
		    else{
		        System.out.println(((x/y) + 1) * z);
		    }
		}
	}
}

